<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxm="http://schemas.devexpress.com/winfx/2008/xaml/map" x:Class="Wpf_MapControl_KmlFileDataAdapter.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <dxm:MapControl  CenterPoint="40.689830, -74.045229" ZoomLevel="16">
            <dxm:ImageTilesLayer>
                <dxm:ImageTilesLayer.DataProvider>
                    <dxm:OpenStreetMapDataProvider/>
                </dxm:ImageTilesLayer.DataProvider>
            </dxm:ImageTilesLayer>
            <dxm:VectorLayer>
                <dxm:VectorLayer.ShapeLoader>
                    <dxm:KmlFileLoader FileUri="kmlFile.kml"/>
                </dxm:VectorLayer.ShapeLoader>
            </dxm:VectorLayer>

        </dxm:MapControl>

    </Grid>
</Window>
